<h3>Edit Blog</h3>

<div class="row">
    <form action="/blogs/{{blog._id}}" method= "POST" class="col s12">

        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value = {{blog.title}}>
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status" class="status">
                    {{#select blog.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="draft">Draft</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Your blog</h5>
                <textarea name="body" id="body" cols="30" rows="10">{{blog.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>

    </form>
</div>